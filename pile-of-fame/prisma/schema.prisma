// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  // Pile of Fame models
  confessions     Confession[]
  ritualSessions  RitualSession[]
  minis           Mini[]
  events          Event[]
  reactions       Reaction[]

  cultId        String?
  cult          Cult?        @relation("CultMembers", fields: [cultId], references: [id])
  foundedCult   Cult?        @relation("CultFounder")
}

model Mini {
  id              String     @id @default(cuid())
  userId          String
  name            String
  system          String?
  status          MiniStatus @default(SHAME)
  stage           MiniStage  @default(UNSTARTED)
  progressPercent Int        @default(0)
  coverImageUrl   String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, status])
  @@index([userId, stage])
}

enum MiniStatus {
  SHAME
  WIP
  FAME
}

enum MiniStage {
  UNSTARTED
  BASECOAT
  WASH
  HIGHLIGHT
  DETAILS
  FINISHED
}

// Verification tokens for email verification
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ===== PILE OF FAME MODELS =====

model Confession {
  id        String   @id @default(cuid())
  userId    String
  miniCount Int
  createdAt DateTime @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event?

  @@index([userId])
}

model RitualSession {
  id              String   @id @default(cuid())
  userId          String
  miniCount       Int
  activityType    ActivityType
  durationSeconds Int
  beforeImageUrl  String?
  afterImageUrl   String?
  createdAt       DateTime @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event?

  @@index([userId])
  @@index([createdAt])
}

enum ActivityType {
  PRIME
  BASE
  HIGHLIGHT
  WASH
  DETAIL
  FINISH
  BASE_EARTH
  BASE_METAL
  BASE_SKIN
  BASE_CLOTH
  BASE_HAIR
}

model Event {
  id        String   @id @default(cuid())
  type      EventType
  userId    String
  createdAt DateTime @default(now())
  eventVersion Int   @default(1)

  // Generic entity reference for pivot safety
  entityType String?
  entityId   String?

  // Relations
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  confession       Confession?       @relation(fields: [confessionId], references: [id], onDelete: SetNull)
  confessionId     String?           @unique
  ritualSession    RitualSession?    @relation(fields: [ritualSessionId], references: [id], onDelete: SetNull)
  ritualSessionId  String?           @unique

  // Metadata for flexible event data
  metadata Json?

  // Reactions
  reactions Reaction[]

  @@index([userId])
  @@index([createdAt])
  @@index([type])
  @@index([entityType, entityId])
}

enum EventType {
  MINI_CREATED
  SESSION_STARTED
  SESSION_ENDED
  MINI_UPDATED
  MILESTONE_UNLOCKED
  SHARE_EXPORTED

  // legacy aliases kept for backward compatibility
  CONFESSION
  RITUAL
  STREAK
  CRUSADE
  SYSTEM
  CULT_JOIN
}

model Reaction {
  id        String       @id @default(cuid())
  eventId   String
  userId    String
  type      ReactionType
  createdAt DateTime     @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

enum ReactionType {
  PRAY    // Support/prayer
  PURIFY  // Cleansing/purification
  EXALT   // Elevation/achievement
}

// ===== PHASE 1.5 MODELS =====

model Cult {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  founderId   String   @unique
  createdAt   DateTime @default(now())

  founder  User      @relation("CultFounder", fields: [founderId], references: [id])
  members  User[]    @relation("CultMembers")
  crusades Crusade[]
}

model Crusade {
  id         String        @id @default(cuid())
  cultId     String
  title      String
  goalType   CrusadeGoalType
  goalTarget Int
  startDate  DateTime
  endDate    DateTime
  createdAt  DateTime      @default(now())

  cult Cult @relation(fields: [cultId], references: [id], onDelete: Cascade)

  @@index([cultId])
}

enum CrusadeGoalType {
  MINIS
  HOURS
  SESSIONS
}
